<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hotel-BNB Login</title>
    <!-- Bootstrap CDN -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
    />
    <!-- Fontawesome CDN -->

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/auth/loginform.css" />
  </head>
  <body>
    <header class="regular_nav_header">
      <nav class="regular_nav">
        <div class="regular_nav_logo">
          <h2><i class="fas fa-h-square"></i> <a href="/">Hotel-BNB</a></h2>
        </div>
        <div class="regular_nav_sub_menu">
          <ul class="regular_nav_sub_menu">
            <li><a href="/#about">About Hotel-BNB</a></li>
            <li><a href="/post/home">Become a poster</a></li>
          </ul>
        </div>
      </nav>
    </header>
    <!-- Status Message Tag -->
    <% if (registerStatusMessage) { %>
    <p class="status_message"><%=registerStatusMessage%></p>
    <% } %>
    <!-- End of Status message Tag -->
    <div class="register_container">
      <div class="image_container">
        <img
          class="register_image"
          src="https://images.unsplash.com/photo-1546198632-9ef6368bef12?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80"
          alt="picture for register"
        />
      </div>
      <div class="form_container">
        <h1 class="register_title">LOGIN ACCOUNT</h1>
        <form action="/auth/login" method="POST" class="inner_form_container">
          <!-- Email -->
          <div>
            <label for="email">Email</label>
            <div class="input_container">
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Enter Email"
                required
              />
            </div>
          </div>
          <!-- End Email -->
          <!-- Password -->
          <div>
            <label for="password">Password</label>
            <div class="input_container">
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Enter password"
                required
              />
            </div>
          </div>
          <!-- End Password -->
          <!-- ===================== -->
          <div class="input_container">
            <input
              type="submit"
              name=""
              value="Login"
              class="input_submit_register"
            />
          </div>
          <a clas="login_with_google" href="/auth/google/login"
            >Login with Google</a
          >
          <span class="log_in_link"
            >Don't have an account? <a href="/auth/register">Register</a></span
          >
        </form>
      </div>
    </div>
    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
    <!-- End of footer -->
    <script src="/js/auth/loginform.js"></script>
  </body>
</html>
